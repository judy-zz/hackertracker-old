.navbar.navbar-fixed-top.navbar-inverse
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.brand{:href => "#"} HackerTracker
      .nav-collapse
        %ul.nav.pull-right
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %i.icon-user.icon-white
              = user_signed_in? ? @user.email : "Sign In"
              %b.caret
            %ul.dropdown-menu
              - if user_signed_in?
                %li
                  %a{:href => "#"}
                    %i.icon-user.icon-white
                    Profile
                %li
                  %a{:href => "#"}
                    %i.icon-cog.icon-white
                    Settings
                %li.divider
                %li
                  %a{:href => "login.html"}
                    %i.icon-off.icon-white
                    Logout
              - else
                = form_for @user, :url => users_sign_in_path do |f|
                  %li
                    .input-prepend
                      %span.add-on
                        %i.icon-envelope-alt.icon-white
                      = f.email_field :email
                  %li
                    .input-prepend
                      %span.add-on
                        %i.icon-asterisk.icon-white
                      = f.password_field :password
                  %li
                    = f.button "Sign in", class: "btn btn-success"
                    = button_tag "Use Github", class: "btn btn-info"


